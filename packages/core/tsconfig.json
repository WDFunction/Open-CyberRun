{
    "compilerOptions": {
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "target": "es2019",
      "isolatedModules": false,
      "noEmit": false,
      "esModuleInterop": true,
      "baseUrl": ".",
